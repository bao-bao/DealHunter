                    </div>
                </div>
                <div class="row">
                    @{
                        foreach (var good in Model)
                        {
                    <div class="col-md-4 animate-box">
                        <div class="property">
                            <a class="fh5co-property" style="background-color: #eeeeee;" disabled="disabled">
