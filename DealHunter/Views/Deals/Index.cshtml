    <script type="text/javascript">
            function deal()
            {
                var goodslow = $("#deallow").val();
                if (goodslow == "")
                {
                    alert("请输入最低价");
                    return;
                }
                else if (parseInt(goodslow) < 0 || parseInt(goodslow) > 2000000000)
                {
                    alert("最低价取值应在0-2000000000之间");
                    return;
                }
                var goodshigh = $("#dealhigh").val();
                if (goodshigh == "") {
                    alert("请输入最高价");
                    return;
                }
                else if (parseInt(goodshigh) < 0 || parseInt(goodshigh) > 2000000000) {
                    alert("最高价取值应在0-2000000000之间");
                    return;
                }
                if (parseInt(goodslow) > parseInt(goodshigh))
                {
                    alert("最低价应不高于最高价");
                    return;
                }
                $.ajax(
                    {
                        url: '@Url.Action("Index")',
                        type: "Post",
                        dataType: "text",
                        data: {
                            "x": 0,
                            "gid": $("#good_id").val(),
                            "min": $("#deallow").val(),
                            "max": $("#dealhigh").val(),
                            "des": $("#dealdes").val()
                        },
                        success: function (result, status) {
                            if (result == "0") {
                                alert("下单成功");
                            }
                            else if (result == "-1")
                            {
                                alert("登录失效，请重新登陆");
                            }
                            else {
                                alert("发布失败,请检查交易信息是否合法");
                            }
                        },
                        error: function (xhr) {
                            alert("错误" + xhr.responseText);
                        }
                    }
                );
            }

        function search()
        {
            $.ajax(
                {
                    url: '@Url.Action("Index")',
                    type: "Post",
                    dataType: "text",
                    data: {
                        "keyword": $("#from-place").val(),
                        "type": $("#dealtype").val(),
                        "min": $("#searchlow").val(),
                        "max": $("#searchhigh").val()
                    },
                    success: function (result, status) {},
                    error: function (xhr) {
                        alert("错误" + xhr.responseText);
                    }
                }
            );
        }
    </script>
</head>
